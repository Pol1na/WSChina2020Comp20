<Page x:Class="WSChina2020AppComp20.Pages.AboutWSPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp20.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ABOUT WORLDSKILLS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="320*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="25" VerticalAlignment="Center" Margin="10" HorizontalAlignment="Center">About WorldSkills</TextBlock>
        <StackPanel Margin="0 20 0 0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Style="{StaticResource MainButton}" Name="HistoryWSBtn"  Content="History of WorldSkills" Margin="15" Click="HistoryWSBtn_Click"></Button>
            <Button Style="{StaticResource MainButton}" Name ="CompetitionSkillsBtn"  Content ="Competition Skills" Margin="15" Click="CompetitionSkillsBtn_Click"></Button>
            <Button Style="{StaticResource MainButton}" Name ="PreviousCompBtn"  Content ="Previous Competition" Margin="15" Click="PreviousCompBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
