<Page x:Class="WSChina2020AppComp20.Pages.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp20.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="320*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource LogoutButton}"></Button>
        <TextBlock Grid.Row="1" FontSize="30" HorizontalAlignment="Center" >Administrator Menu</TextBlock>
        <StackPanel Grid.Row="1" Width="750" Height="300" Margin="5">
            <TextBlock FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">Hello, Username</TextBlock>
            <Button Style="{StaticResource MainButton}" Margin="5">Event Managment</Button>
            <Button Style="{StaticResource MainButton}" Margin="5">Competitor Managment</Button>
        </StackPanel>

    </Grid>
</Page>
