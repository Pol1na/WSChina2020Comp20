<Page x:Class="WSChina2020AppComp20.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp20.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="320*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Width="600" Height="300">
            <TextBlock FontSize="25" HorizontalAlignment="Center">Auth Page in WorldSkills System</TextBlock>
            <TextBlock FontSize="18" HorizontalAlignment="Center" Margin="0 40 0 0">Введите логин:                </TextBlock>
            <TextBox Margin="5" HorizontalAlignment="Center" Width="200"></TextBox>
            <TextBlock FontSize="18" Margin="5" HorizontalAlignment="Center">Введите пароль:              </TextBlock>
            <PasswordBox Margin="5" Width="200"></PasswordBox>
            <Button Margin="5" Width="200" Height="50" Name="AuthButton">Войти</Button>
                
        </StackPanel>
    </Grid>
</Page>
