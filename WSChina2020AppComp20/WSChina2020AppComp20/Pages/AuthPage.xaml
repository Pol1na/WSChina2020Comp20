<Page x:Class="WSChina2020AppComp20.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp20.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel Style="{StaticResource MSP}">
            <TextBlock Style="{StaticResource MainTB}">Authorization</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource SecondaryTB}">Login</TextBlock>
                <TextBox Name="LoginTBox"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource SecondaryTB}">Password</TextBlock>
                <PasswordBox Name="PasswordPB" Width="120" Height="25"></PasswordBox>
            </StackPanel>
            <Button Style="{StaticResource MainButton}" Name="AuthBtn" Click="AuthBtn_Click">Log In</Button>
        </StackPanel>
    </Grid>
</Page>
