<Page x:Class="WSChina2020AppComp20.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp20.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <TextBlock Style="{StaticResource MainTB}">Main Menu</TextBlock>
        <Button Name="LoginButton"  Content="Login" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Width="70" Click="LoginButton_Click"></Button>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="AboutWSBtn" Content ="About WorldSkills" Style="{StaticResource MainButton}" Click="AboutWSBtn_Click"></Button>
            <Button x:Name="AboutWSCNButton" Content ="About WorldSkills China" Style="{StaticResource MainButton}" Click="AboutWSCNButton_Click"></Button>
            <Button x:Name="AboutSHButton" Content ="About Shang Hai" Style="{StaticResource MainButton}" Click="AboutSHButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
