<Page x:Class="WSChina2020AppComp20.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp20.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="320*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>

        <Button Content="Login" Grid.Row ="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Width="70"></Button>
        <StackPanel HorizontalAlignment="Center" Height="300" Grid.Row="1" VerticalAlignment="Center" Width="354">
            <Button Name="AboutWSBtn" Content ="About WorldSkills" Style="{StaticResource MainButton}" Margin="5" Click="AboutWSBtn_Click"></Button>
            <Button x:Name="AboutWSCNButton" Content ="About WorldSkills China" Style="{StaticResource MainButton}" Margin="5" Click="AboutWSCNButton_Click"></Button>
            <Button x:Name="AboutSHButton" Content ="About Shang Hai" Style="{StaticResource MainButton}" Margin="5" Click="AboutSHButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
