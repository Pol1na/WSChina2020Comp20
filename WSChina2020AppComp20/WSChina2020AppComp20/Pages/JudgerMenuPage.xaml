<Page x:Class="WSChina2020AppComp20.Pages.JudgerMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp20.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JudgerMenuPage" MinHeight="450">

    <Grid>
        <TextBlock FontSize="25" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Top" >Judger Menu</TextBlock>
        <StackPanel Margin="20">
            <TextBlock Name="HelloTB" FontSize="25"  Margin="40"></TextBlock>
            <Button Style="{StaticResource MainButton}" Margin="5">Draw Lots</Button>
            <Button Style="{StaticResource MainButton}" Margin="5">Input Score</Button>
            <Button Style="{StaticResource MainButton}" Margin="5">View Result</Button>

        </StackPanel>

    </Grid>
</Page>
